<UserControl x:Class="HunterPie.UI.Overlay.Widgets.Monster.Views.BossMonsterQurioPartView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:HunterPie.UI.Overlay.Widgets.Monster.ViewModels"
             xmlns:overlay="clr-namespace:HunterPie.UI.Overlay.Controls"
             xmlns:converters="clr-namespace:HunterPie.UI.Architecture.Converters"
             d:DataContext="{d:DesignInstance Type=vm:MonsterPartViewModel}"
             mc:Ignorable="d"
             d:DesignWidth="200">
    <UserControl.Resources>
        <converters:MonsterPartIdToNameConverter x:Key="MonsterPartIdToNameConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="33*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" 
                   Text="{Binding Breaks}"
                   d:Text="3"
                   Foreground="{StaticResource White@50}"
                   FontFamily="{StaticResource Font.Default}"
                   FontSize="14"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center">
            <TextBlock.Effect>
                <DropShadowEffect Color="Black"
                                      BlurRadius="4" 
                                      ShadowDepth="0"/>
            </TextBlock.Effect>
        </TextBlock>
        <TextBlock Text="{Binding Name, Converter={StaticResource MonsterPartIdToNameConverter}, Mode=OneTime}"
                   d:Text="Head"
                   Foreground="{StaticResource White@50}"
                   FontFamily="{StaticResource Font.Default}"
                   FontSize="14"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"
                   Grid.Column="1">
            <TextBlock.Effect>
                <DropShadowEffect Color="Black"
                                      BlurRadius="4" 
                                      ShadowDepth="0"/>
            </TextBlock.Effect>
        </TextBlock>

        <Grid Grid.Column="0" 
              Margin="30,15,0,0" 
              Grid.ColumnSpan="2">
            <overlay:Bar ForegroundDelayed="{StaticResource Brushes.Widgets.Monster.Part.Qurio.Background}"
                         Height="7"
                         VerticalAlignment="Top"
                         Margin="4.5,0,5,0"
                         Background="{StaticResource Gray@500}"
                         MaxValue="{Binding QurioMaxHealth, Mode=OneWay}"
                         Value="{Binding QurioHealth, Mode=OneWay}"
                         d:Value="50"
                         d:MaxValue="100"
                         BorderThickness="0"
                         RenderTransformOrigin="0.5,0.5"
                         Foreground="{StaticResource Brushes.Widgets.Monster.Part.Qurio.Foreground}">
                <overlay:Bar.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleX="45"/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </overlay:Bar.RenderTransform>
            </overlay:Bar>


            <TextBlock Foreground="{StaticResource White@50}"
                       FontSize="14"
                       VerticalAlignment="Bottom"
                       HorizontalAlignment="Center"
                       Margin="0,8,0,0">
                <TextBlock.Effect>
                    <DropShadowEffect Color="Black"
                                      BlurRadius="2"
                                      ShadowDepth="0"/>
                </TextBlock.Effect>
                <Run Text="{Binding QurioHealth, StringFormat=\{0:F1\}}"
                     d:Text="2000.0"/><!--
             --><Run Text="/"
                     Foreground="{StaticResource White@200}"
                     FontWeight="Light"/><!--
             --><Run Text="{Binding QurioMaxHealth, StringFormat=\{0:F1\}}"
                     Foreground="{StaticResource White@200}"
                     FontWeight="Light"
                     d:Text="2000.0"/>
            </TextBlock>
        </Grid>
    </Grid>
</UserControl>
