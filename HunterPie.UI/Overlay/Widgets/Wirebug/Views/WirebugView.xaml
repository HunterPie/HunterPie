<UserControl x:Class="HunterPie.UI.Overlay.Widgets.Wirebug.Views.WirebugView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:HunterPie.UI.Overlay.Controls"
             xmlns:converters="clr-namespace:HunterPie.UI.Architecture.Converters"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:HunterPie.UI.Overlay.Widgets.Wirebug.ViewModels"
             d:DataContext="{d:DesignInstance Type=vm:WirebugViewModel}"
             d:DesignHeight="50"
             d:DesignWidth="50"
             IsHitTestVisible="False"
             mc:Ignorable="d">
	<UserControl.Resources>
		<BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
		<converters:RatioConverter x:Key="RatioConverter" />
		<converters:WirebugCooldownBorderConverter x:Key="WirebugCooldownBorderConverter" />
		<converters:WirebugStateToVisibilityConverter x:Key="WirebugStateToVisibilityConverter" />
		<converters:WirebugStateToIconConverter x:Key="WirebugStateToIconConverter" />
		<converters:WirebugStateToColorConverter x:Key="WirebugStateToColorConverter" />
	</UserControl.Resources>
	<Grid>
		<Ellipse Width="1"
		         Height="1"
		         HorizontalAlignment="Center"
		         VerticalAlignment="Center"
		         Fill="#FF5B86E5"
		         RenderTransformOrigin="0.5,0.5">
			<Ellipse.RenderTransform>
				<TransformGroup>
					<ScaleTransform ScaleX="1" ScaleY="1" />
				</TransformGroup>
			</Ellipse.RenderTransform>
			<Ellipse.Style>
				<Style TargetType="Ellipse">
					<Style.Triggers>
						<DataTrigger Binding="{Binding OnCooldown}"
						             Value="False">
							<DataTrigger.EnterActions>
								<BeginStoryboard Name="ANIMATION_PULSE">
									<Storyboard RepeatBehavior="Forever"
									            Duration="0:0:5">
										<DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="Opacity">
											<EasingDoubleKeyFrame KeyTime="0:0:0"
											                      Value="1" />
											<EasingDoubleKeyFrame KeyTime="0:0:1"
											                      Value="0">
												<EasingDoubleKeyFrame.EasingFunction>
													<ExponentialEase EasingMode="EaseOut" />
												</EasingDoubleKeyFrame.EasingFunction>
											</EasingDoubleKeyFrame>
										</DoubleAnimationUsingKeyFrames>

										<DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)">
											<EasingDoubleKeyFrame KeyTime="0:0:0"
											                      Value="50" />
											<EasingDoubleKeyFrame KeyTime="0:0:0.25"
											                      Value="50">
												<EasingDoubleKeyFrame.EasingFunction>
													<ExponentialEase EasingMode="EaseOut" />
												</EasingDoubleKeyFrame.EasingFunction>
											</EasingDoubleKeyFrame>
											<EasingDoubleKeyFrame KeyTime="0:0:01.5"
											                      Value="70">
												<EasingDoubleKeyFrame.EasingFunction>
													<ExponentialEase EasingMode="EaseOut" />
												</EasingDoubleKeyFrame.EasingFunction>
											</EasingDoubleKeyFrame>
										</DoubleAnimationUsingKeyFrames>

										<DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)">
											<EasingDoubleKeyFrame KeyTime="0:0:0"
											                      Value="50" />
											<EasingDoubleKeyFrame KeyTime="0:0:0.25"
											                      Value="50">
												<EasingDoubleKeyFrame.EasingFunction>
													<ExponentialEase EasingMode="EaseOut" />
												</EasingDoubleKeyFrame.EasingFunction>
											</EasingDoubleKeyFrame>
											<EasingDoubleKeyFrame KeyTime="0:0:1.5"
											                      Value="70">
												<EasingDoubleKeyFrame.EasingFunction>
													<ExponentialEase EasingMode="EaseOut" />
												</EasingDoubleKeyFrame.EasingFunction>
											</EasingDoubleKeyFrame>
										</DoubleAnimationUsingKeyFrames>
									</Storyboard>
								</BeginStoryboard>
							</DataTrigger.EnterActions>
							<DataTrigger.ExitActions>
								<RemoveStoryboard BeginStoryboardName="ANIMATION_PULSE" />
							</DataTrigger.ExitActions>
						</DataTrigger>
					</Style.Triggers>
				</Style>
			</Ellipse.Style>
		</Ellipse>
		<Ellipse Fill="#B2000000" />
		<controls:Arc StrokeThickness="3">
			<controls:Arc.Stroke>
				<LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
					<GradientStop Color="#36D1DC" />
					<GradientStop Offset="1" Color="#5B86E5" />
				</LinearGradientBrush>
			</controls:Arc.Stroke>
			<controls:Arc.Percentage>
				<MultiBinding Converter="{StaticResource WirebugCooldownBorderConverter}">
					<Binding Path="Cooldown" />
					<Binding Path="MaxCooldown" />
					<Binding Path="IsAvailable" />
					<Binding Path="OnCooldown" />
				</MultiBinding>
			</controls:Arc.Percentage>
		</controls:Arc>
		<controls:Arc Margin="3"
		              StrokeThickness="3">
			<controls:Arc.Stroke>
				<LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
					<GradientStop Offset="1" Color="#FFCD3F52" />
					<GradientStop Offset="0" Color="#FFC1416F" />
				</LinearGradientBrush>
			</controls:Arc.Stroke>
			<controls:Arc.Percentage>
				<MultiBinding Converter="{StaticResource RatioConverter}">
					<Binding Path="Timer" />
					<Binding Path="MaxTimer" />
				</MultiBinding>
			</controls:Arc.Percentage>
		</controls:Arc>
		<Image Margin="5,10,8,10"
		       d:Source="{StaticResource ICON_WIREBUG_WINDMANTLE}"
		       Source="{Binding WirebugState, Mode=OneWay, Converter={StaticResource WirebugStateToIconConverter}}">
			<Image.Effect>
				<DropShadowEffect d:Color="#FF00D600"
				                  BlurRadius="10"
				                  ShadowDepth="0"
				                  Color="{Binding WirebugState, Mode=OneWay, Converter={StaticResource WirebugStateToColorConverter}}" />
			</Image.Effect>
		</Image>
		<Grid d:Visibility="Visible"
		      Visibility="{Binding OnCooldown, Converter={StaticResource BooleanToVisibilityConverter}}">
			<controls:Arc Margin="5"
			              RenderTransformOrigin="0.5,0.5"
			              Stroke="#80000000"
			              StrokeThickness="20">
				<controls:Arc.RenderTransform>
					<TransformGroup>
						<ScaleTransform ScaleX="-1" />
					</TransformGroup>
				</controls:Arc.RenderTransform>
				<controls:Arc.Percentage>
					<MultiBinding Converter="{StaticResource RatioConverter}">
						<Binding Path="Cooldown" />
						<Binding Path="MaxCooldown" />
					</MultiBinding>
				</controls:Arc.Percentage>
			</controls:Arc>
			<Ellipse Margin="5"
			         Fill="#80000000" />
			<TextBlock HorizontalAlignment="Center"
			           VerticalAlignment="Center"
			           FontFamily="{StaticResource Font.Default}"
			           FontSize="15"
			           FontWeight="Medium"
			           Foreground="{StaticResource White@100}"
			           Text="{Binding Cooldown, Mode=OneWay, StringFormat=\{0:F1\}}" />
		</Grid>

		<Ellipse Fill="{StaticResource Red@600}"
		         Opacity="1"
		         Visibility="{Binding WirebugState, Mode=OneWay, Converter={StaticResource WirebugStateToVisibilityConverter}}" />
		<Ellipse Fill="{StaticResource LightRed@300}"
		         Visibility="{Binding WirebugState, Mode=OneWay, Converter={StaticResource WirebugStateToVisibilityConverter}}">
			<Ellipse.OpacityMask>
				<ImageBrush ImageSource="{StaticResource ICON_ERROR_MASK}" />
			</Ellipse.OpacityMask>
		</Ellipse>
	</Grid>
</UserControl>
