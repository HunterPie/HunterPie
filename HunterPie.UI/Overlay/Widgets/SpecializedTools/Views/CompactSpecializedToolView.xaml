<UserControl x:Class="HunterPie.UI.Overlay.Widgets.SpecializedTools.Views.CompactSpecializedToolView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HunterPie.UI.Overlay.Widgets.SpecializedTools.Views"
             xmlns:progress="clr-namespace:HunterPie.UI.Controls.Progress"
             xmlns:image="clr-namespace:HunterPie.UI.Controls.Image"
             xmlns:viewModels="clr-namespace:HunterPie.UI.Overlay.Widgets.SpecializedTools.ViewModels"
             xmlns:brushes="clr-namespace:HunterPie.UI.Architecture.Converters.Brushes"
             xmlns:converters="clr-namespace:HunterPie.UI.Architecture.Converters"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance viewModels:SpecializedToolViewModelV2}"
             d:DesignWidth="45"
             d:DesignHeight="45">
    <UserControl.Resources>
        <brushes:SpecializedToolToColorConverter x:Key="SpecializedToolToColorConverter"/>
        <converters:RatioConverter x:Key="RatioConverter"/>
        <converters:SecondsToTimeString x:Key="SecondsToTimeString"/> 
        <converters:SpecializedToolTypeToIconConverter x:Key="SpecializedToolTypeToIconConverter"/>
        <brushes:BrushOpacityConverter x:Key="BrushOpacityConverter" />
    </UserControl.Resources>
    <Grid>
        <Border Background="{Binding Source={StaticResource Gray@300}, Converter={StaticResource BrushOpacityConverter}, ConverterParameter={StaticResource Widgets.Background.Opacity}}"
                BorderBrush="{Binding Source={StaticResource Gray@50}, Converter={StaticResource BrushOpacityConverter}, ConverterParameter={StaticResource Widgets.Background.Opacity}}"
                CornerRadius="5"
                BorderThickness="2">
            <Grid>
                <image:Icon d:Image="{StaticResource Icons.Tools.Mantle}"
                            Image="{Binding Id, Mode=OneWay, Converter={StaticResource SpecializedToolTypeToIconConverter}}"
                            Foreground="{Binding Id, Mode=OneWay, Converter={StaticResource SpecializedToolToColorConverter}}"
                            d:Foreground="White"
                            Margin="5"
                            Opacity="0.5"/>

                <TextBlock Foreground="{StaticResource White}"
                           d:Text="00:00"
                           FontWeight="Medium"
                           FontFamily="{StaticResource Font.Default}"
                           FontSize="13"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Margin="2">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsRecharging, Mode=OneWay}"
                                             Value="True">
                                    <Setter Property="Text">
                                        <Setter.Value>
                                            <MultiBinding Converter="{StaticResource RatioConverter}"
                                                          StringFormat="P0">
                                                <Binding Path="Cooldown"/>
                                                <Binding Path="MaxCooldown"/>
                                            </MultiBinding>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsRecharging, Mode=OneWay}"
                                             Value="False">
                                    <Setter Property="Text" Value="{Binding Timer, Mode=OneWay, Converter={StaticResource SecondsToTimeString}}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
        </Border>
        
        <progress:SquareProgress d:Current="50"
                                 d:Max="100"
                                 Stroke="{Binding Id, Mode=OneWay, Converter={StaticResource SpecializedToolToColorConverter}}"
                                 d:Stroke="White"
                                 Radius="5"
                                 StrokeThickness="2"
                                 StrokeStartLineCap="Round"
                                 StrokeEndLineCap="Round"
                                 StrokeDashCap="Round">
            <progress:SquareProgress.Style>
                <Style TargetType="progress:SquareProgress">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsRecharging, Mode=OneWay}"
                                     Value="True">
                            <Setter Property="Current" Value="{Binding Cooldown, Mode=OneWay}"/>
                            <Setter Property="Max" Value="{Binding MaxCooldown, Mode=OneWay}"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IsRecharging, Mode=OneWay}"
                                     Value="False">
                            <Setter Property="Current" Value="{Binding Timer, Mode=OneWay}"/>
                            <Setter Property="Max" Value="{Binding MaxTimer, Mode=OneWay}"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </progress:SquareProgress.Style>
        </progress:SquareProgress>
        
    </Grid>
</UserControl>
