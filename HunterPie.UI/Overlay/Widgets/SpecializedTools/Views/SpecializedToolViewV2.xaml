<overlay:Widget x:Class="HunterPie.UI.Overlay.Widgets.SpecializedTools.Views.SpecializedToolViewV2"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                xmlns:local="clr-namespace:HunterPie.UI.Overlay.Widgets.SpecializedTools.Views"
                xmlns:viewModels="clr-namespace:HunterPie.UI.Overlay.Widgets.SpecializedTools.ViewModels"
                xmlns:overlay="clr-namespace:HunterPie.UI.Overlay"
                mc:Ignorable="d"
                d:DataContext="{d:DesignInstance viewModels:SpecializedToolViewModelV2}"
                Style="{DynamicResource Widgets.SpecializedToolV2}"
                d:DesignWidth="200"
                d:DesignHeight="50">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid>
        <ContentPresenter Visibility="{Binding IsVisible, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
            <ContentPresenter.Style>
                <Style TargetType="ContentPresenter">
                    <Setter Property="Content">
                        <Setter.Value>
                            <local:DetailedSpecializedToolView Height="45"/>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Config.IsCompactModeEnabled.Value, Mode=OneWay}"
                                     Value="True">
                            <Setter Property="Content">
                                <Setter.Value>
                                    <local:CompactSpecializedToolView HorizontalAlignment="Left"
                                                                      Width="45"
                                                                      Height="45"/>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ContentPresenter.Style>
        </ContentPresenter>
    </Grid>
</overlay:Widget>
