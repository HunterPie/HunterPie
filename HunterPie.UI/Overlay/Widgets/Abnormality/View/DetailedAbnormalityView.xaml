<UserControl x:Class="HunterPie.UI.Overlay.Widgets.Abnormality.View.DetailedAbnormalityView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:arithmetics="clr-namespace:HunterPie.UI.Architecture.Converters.Arithmetics"
             xmlns:brushes="clr-namespace:HunterPie.UI.Architecture.Converters.Brushes"
             xmlns:viewModel="clr-namespace:HunterPie.UI.Overlay.Widgets.Abnormality.ViewModel"
             xmlns:converters="clr-namespace:HunterPie.UI.Architecture.Converters"
             xmlns:controls="clr-namespace:HunterPie.UI.Overlay.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="35" 
             d:DesignWidth="200"
             d:DataContext="{d:DesignInstance viewModel:AbnormalityViewModel}">
    <UserControl.Resources>
        <arithmetics:MultiplyNumberConverter Factor="0.5"
                                             x:Key="DivideByHalfConverter"/>
        <brushes:BrushOpacityConverter x:Key="BrushOpacityConverter"/>
        <converters:AbnormalityStringToIconConverter x:Key="AbnormalityStringToIconConverter"/>
        <converters:ReverseRatioConverter x:Key="ReverseRatioConverter"/>
        <converters:RatioConverter x:Key="RatioConverter"/>
        <converters:AbnormalityNameConverter x:Key="AbnormalityNameConverter"/>
        <converters:SecondsToTimeString x:Key="SecondsToTimeString"/>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType={x:Type Grid}}}"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Background -->
        <Rectangle Grid.Column="0"
                   Grid.ColumnSpan="2"
                   Fill="{Binding Source={StaticResource Gray@300}, Converter={StaticResource BrushOpacityConverter}, ConverterParameter={StaticResource Widgets.Background.Opacity}}"
                   Stroke="{Binding Source={StaticResource Gray@200}, Converter={StaticResource BrushOpacityConverter}, ConverterParameter={StaticResource Widgets.Background.Opacity}}"
                   StrokeThickness="1"
                   RadiusX="{Binding ActualHeight, RelativeSource={RelativeSource Self}, Converter={StaticResource DivideByHalfConverter}}"
                   RadiusY="{Binding ActualHeight, RelativeSource={RelativeSource Self}, Converter={StaticResource DivideByHalfConverter}}"/>

        <!-- Icon -->
        <Grid Grid.Column="0">
            <Ellipse Fill="{StaticResource Gray@100}"
                     Stroke="{StaticResource Gray@200}"
                     StrokeThickness="2.5"/>

            <Image Source="{Binding Icon, Converter={StaticResource AbnormalityStringToIconConverter}}"
                   d:Source="{StaticResource ITEM_DASH}"
                   Margin="6"/>

            <controls:Arc Margin="2"
                          d:Percentage="0.2"
                          d:Width="35"
                          Fill="#B0000000" 
                          RenderTransformOrigin="0.5,0.5">
                <controls:Arc.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="-1"/>
                    </TransformGroup>
                </controls:Arc.RenderTransform>
                <controls:Arc.Percentage>
                    <MultiBinding Converter="{StaticResource ReverseRatioConverter}">
                        <Binding Path="Timer"
                                 Mode="OneWay"/>
                        <Binding Path="MaxTimer"
                                 Mode="OneWay"/>
                    </MultiBinding>
                </controls:Arc.Percentage>
            </controls:Arc>

            <controls:Arc StrokeThickness="2.5"
                          d:Percentage="0.8"
                          d:Width="35"
                          d:Stroke="{StaticResource Brushes.Widgets.AbnormalityTray.Buff}"
                          StrokeEndLineCap="Round"
                          StrokeStartLineCap="Round"
                          StrokeDashCap="Round">
                <controls:Arc.Percentage>
                    <MultiBinding Converter="{StaticResource RatioConverter}">
                        <Binding Path="Timer" 
                                 Mode="OneWay"/>
                        <Binding Path="MaxTimer" 
                                 Mode="OneWay"/>
                    </MultiBinding>
                </controls:Arc.Percentage>
                <controls:Arc.Style>
                    <Style TargetType="{x:Type controls:Arc}">
                        <Setter Property="Stroke" 
                                Value="{DynamicResource Brushes.Widgets.AbnormalityTray.Debuff}"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsBuff, Mode=OneWay}" 
                                         Value="True">
                                <Setter Property="Stroke" 
                                        Value="{DynamicResource Brushes.Widgets.AbnormalityTray.Buff}"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </controls:Arc.Style>
            </controls:Arc>
        </Grid>

        <Grid Column="1"
              Margin="5,2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       Text="{Binding Name, Mode=OneWay, Converter={StaticResource AbnormalityNameConverter}}"
                       d:Text="Abnormality Name"
                       Foreground="{StaticResource White@500}"
                       FontWeight="Medium"
                       FontSize="13"
                       TextTrimming="CharacterEllipsis"/>

            <TextBlock Grid.Row="1"
                       d:Text="00:10"
                       Foreground="{StaticResource White@100}"
                       FontSize="13"
                       FontFamily="{StaticResource Font.Default}">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsBuildup, Mode=OneWay}" Value="False">
                                <DataTrigger.Setters>
                                    <Setter Property="Text" 
                                            Value="{Binding Timer, Converter={StaticResource SecondsToTimeString}, Mode=OneWay}"/>
                                </DataTrigger.Setters>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsBuildup, Mode=OneWay}" Value="True">
                                <DataTrigger.Setters>
                                    <Setter Property="Text">
                                        <Setter.Value>
                                            <MultiBinding Converter="{StaticResource RatioConverter}" StringFormat="{}{0:P0}">
                                                <Binding Path="Timer" 
                                                         Mode="OneWay"/>
                                                <Binding Path="MaxTimer" 
                                                         Mode="OneWay"/>
                                            </MultiBinding>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger.Setters>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsInfinite, Mode=OneWay}" 
                                         Value="True">
                                <DataTrigger.Setters>
                                    <Setter Property="Text" Value="∞"/>
                                </DataTrigger.Setters>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </Grid>
    </Grid>
</UserControl>
