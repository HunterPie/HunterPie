<UserControl x:Class="HunterPie.UI.Overlay.Widgets.Activities.Rise.Views.MHRiseActivitiesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HunterPie.UI.Overlay.Widgets.Activities.Rise.Views"
             xmlns:viewModels="clr-namespace:HunterPie.UI.Overlay.Widgets.Activities.Rise.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance viewModels:MHRiseActivitiesViewModel}">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <local:SubmarinesView DataContext="{Binding Submarines, Mode=OneTime}"
                                  Width="240"
                                  Visibility="{Binding DataContext.IsSubmarinesEnabled.Value, RelativeSource={RelativeSource AncestorType={x:Type local:MHRiseActivitiesView}}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            <local:CohootNestsView Height="40"
                                   DataContext="{Binding CohootNests, Mode=OneTime}"
                                   Width="240"
                                   Visibility="{Binding DataContext.IsCohootEnabled.Value, RelativeSource={RelativeSource AncestorType={x:Type local:MHRiseActivitiesView}}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        </StackPanel>
        <local:TrainingDojoView Grid.Row="0"
                                Grid.Column="1"
                                Width="40"
                                Height="146"
                                Margin="2,0,0,0"
                                DataContext="{Binding TrainingDojo, Mode=OneTime}"
                                Visibility="{Binding DataContext.IsTrainingDojoEnabled.Value, RelativeSource={RelativeSource AncestorType={x:Type local:MHRiseActivitiesView}}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
    </Grid>
</UserControl>
