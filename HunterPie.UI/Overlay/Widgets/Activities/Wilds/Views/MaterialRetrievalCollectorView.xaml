<UserControl x:Class="HunterPie.UI.Overlay.Widgets.Activities.Wilds.Views.MaterialRetrievalCollectorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewModels="clr-namespace:HunterPie.UI.Overlay.Widgets.Activities.Wilds.ViewModels"
             xmlns:image="clr-namespace:HunterPie.UI.Controls.Image"
             xmlns:progress="clr-namespace:HunterPie.UI.Controls.Progress"
             xmlns:game="clr-namespace:HunterPie.UI.Architecture.Converters.Game"
             mc:Ignorable="d" 
             d:DesignHeight="35" 
             d:DesignWidth="200"
             d:DataContext="{d:DesignInstance viewModels:MaterialRetrievalCollectorViewModel}">
    <UserControl.Resources>
        <game:MaterialRetrieverCollectorToStringConverter x:Key="MaterialRetrieverCollectorToStringConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="35"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <image:Icon Grid.Column="0"
                    Grid.Row="0"
                    Grid.RowSpan="2"
                    Foreground="{StaticResource White@200}"
                    Image="{StaticResource Icons.Activities.MaterialRetrieval}"
                    Margin="5"/>

        <TextBlock Grid.Row="0"
                   Grid.Column="1"
                   Text="{Binding Id, Mode=OneWay, Converter={StaticResource MaterialRetrieverCollectorToStringConverter}}"
                   d:Text="Rysher"
                   FontSize="13"
                   FontWeight="Medium"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   Foreground="{StaticResource White@200}"/>

        <TextBlock Grid.Row="0"
                   Grid.Column="1"
                   Margin="5,0"
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="Right"
                   Foreground="{StaticResource White@300}"
                   FontSize="12">
            <Run Text="{Binding Count, Mode=OneWay}"
                 d:Text="05"
                 Foreground="{StaticResource White@100}"
                 FontSize="14"
                 FontWeight="Medium"/><!--
         --><Run Text="/"/><!--
         --><Run Text="{Binding MaxCount, Mode=OneWay}"
                 d:Text="16"/>
        </TextBlock>

        <progress:Gauge Grid.Row="1"
                        Grid.Column="1"
                        Foreground="{StaticResource Green}"
                        Background="{StaticResource Gray@200}"
                        BorderBrush="{StaticResource Gray}"
                        Max="{Binding MaxCount, Mode=OneWay}"
                        Current="{Binding Count, Mode=OneWay}"
                        d:Max="16"
                        d:Current="5"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Stretch"
                        Height="7"
                        Margin="0,0,5,0"
                        Markers="{Binding MaxCount, Mode=OneWay}"/>
    </Grid>
</UserControl>
