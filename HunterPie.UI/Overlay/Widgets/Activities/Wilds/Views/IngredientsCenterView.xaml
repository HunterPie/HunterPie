<UserControl x:Class="HunterPie.UI.Overlay.Widgets.Activities.Wilds.Views.IngredientsCenterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HunterPie.UI.Overlay.Widgets.Activities.Wilds.Views"
             xmlns:viewModels="clr-namespace:HunterPie.UI.Overlay.Widgets.Activities.Wilds.ViewModels"
             xmlns:brushes="clr-namespace:HunterPie.UI.Architecture.Converters.Brushes"
             xmlns:image="clr-namespace:HunterPie.UI.Controls.Image"
             xmlns:assets="clr-namespace:HunterPie.UI.Architecture.Assets"
             mc:Ignorable="d" 
             d:DesignHeight="40" 
             d:DesignWidth="135"
             d:DataContext="{d:DesignInstance viewModels:IngredientsCenterViewModel}">
    <UserControl.Resources>
        <brushes:BrushToColorConverter x:Key="BrushToColorConverter"/>
        <brushes:BrushOpacityConverter x:Key="BrushOpacityConverter"/>
    </UserControl.Resources>
    <Border BorderBrush="{StaticResource GRAY}"
            BorderThickness="1"
            CornerRadius="5"
            Background="{Binding Source={StaticResource GRAY_200}, Converter={StaticResource BrushOpacityConverter}, ConverterParameter={StaticResource Widgets.Background.Opacity}}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <image:Icon Grid.Column="0"
                        Image="{StaticResource Icons.Activities.IngredientsCenter}"
                        Foreground="{StaticResource WHITE_200}"
                        Margin="7"
                        Width="{Binding ActualHeight, RelativeSource={RelativeSource Self}}"/>

            
            <Ellipse Grid.Column="1"
                     Width="7"
                     Height="{Binding Width, RelativeSource={RelativeSource Self}}"
                     VerticalAlignment="Top"
                     HorizontalAlignment="Right"
                     d:Fill="{StaticResource GREEN}"
                     Margin="3">
                <Ellipse.Effect>
                    <DropShadowEffect Color="{Binding Fill, RelativeSource={RelativeSource AncestorType={x:Type Ellipse}}, Converter={StaticResource BrushToColorConverter}}"
                                      ShadowDepth="0"
                                      BlurRadius="10"/>
                </Ellipse.Effect>
                <Ellipse.Style>
                    <Style TargetType="Ellipse">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsFull, Mode=OneWay}" Value="True">
                                <Setter Property="Fill" Value="{StaticResource GREEN}"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsFull, Mode=OneWay}" Value="False">
                                <Setter Property="Fill" Value="{StaticResource YELLOW}"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Ellipse.Style>
            </Ellipse>

            <TextBlock Grid.Column="1"
                       d:Text="5"
                       Text="{Binding Rations, Mode=OneWay}"
                       Foreground="{StaticResource WHITE_200}"
                       FontSize="15"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Center"
                       FontWeight="Medium"
                       Margin="3"/>
            <TextBlock Grid.Column="1"
                       d:Text="rations"
                       Text="{assets:LocalizationString '//Strings/Client/Overlay/String[@Id=&quot;RATIONS_STRING&quot;]'}"
                       Foreground="{StaticResource WHITE_500}"
                       FontSize="13"
                       VerticalAlignment="Bottom"
                       HorizontalAlignment="Center"
                       Margin="5"/>
        </Grid>
    </Border>
</UserControl>
