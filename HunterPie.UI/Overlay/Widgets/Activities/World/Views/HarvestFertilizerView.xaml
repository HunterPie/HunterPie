<UserControl x:Class="HunterPie.UI.Overlay.Widgets.Activities.World.Views.HarvestFertilizerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:HunterPie.UI.Architecture.Converters"
             xmlns:image="clr-namespace:HunterPie.UI.Controls.Image"
             xmlns:viewModels="clr-namespace:HunterPie.UI.Overlay.Widgets.Activities.World.ViewModels"
             xmlns:views="clr-namespace:HunterPie.UI.Overlay.Widgets.Activities.World.Views"
             mc:Ignorable="d" 
             d:DesignHeight="35" 
             d:DesignWidth="200"
             d:DataContext="{d:DesignInstance viewModels:HarvestFertilizerViewModel}">
    <UserControl.Resources>
        <converters:FertilizerToIconConverter x:Key="FertilizerToIconConverter"/>
        <converters:FertilizerToNameConverter x:Key="FertilizerToNameConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="35"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="1"
                BorderThickness="1,1,0,0"
                BorderBrush="{StaticResource GRAY}"
                Background="{StaticResource GRAY_100}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="0"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Text="{Binding Fertilizer, Mode=OneWay, Converter={StaticResource FertilizerToNameConverter}}"
                           TextTrimming="CharacterEllipsis"
                           Margin="5,0"
                           Foreground="{StaticResource WHITE_50}"
                           FontSize="13"
                           d:Text="Fertilizer name"/>

                <image:Icon Grid.Row="0"
                            Grid.RowSpan="2"
                            Grid.Column="1"
                            Image="{StaticResource ICON_WARN}"
                            Width="13"
                            Height="{Binding ActualWidth, RelativeSource={RelativeSource Self}}"
                            Foreground="{StaticResource YELLOW}"
                            Margin="5"
                            Visibility="{Binding IsExpiring, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <!-- Day pills -->
                <ItemsControl Grid.Row="1"
                              Grid.Column="0"
                              d:ItemsSource="{d:SampleData ItemCount=8}"
                              Margin="4.5,0"
                              ItemsSource="{Binding Days, Mode=OneTime}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <views:FertilizerDayView Width="9"
                                                     Height="14"
                                                     Margin="1.5,0"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Border>
        
        <Border Grid.Column="0"
                Background="{StaticResource GRAY_300}"
                BorderBrush="{StaticResource GRAY}"
                BorderThickness="1,1,0,0">
            <Image Source="{Binding Fertilizer, Mode=OneWay, Converter={StaticResource FertilizerToIconConverter}}"
                   d:Source="{StaticResource ICON_FERTILIZER_GROWTH_L}"
                   Margin="5"/>

            <Border.Style>
                <Style TargetType="Border">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsFirst, Mode=OneWay}"
                                     Value="True">
                            <Setter Property="CornerRadius" Value="5,0,0,0"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IsFirst, Mode=OneWay}"
                                     Value="False">
                            <Setter Property="CornerRadius" Value="0"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
        </Border>
    </Grid>
</UserControl>
