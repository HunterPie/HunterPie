<UserControl x:Class="HunterPie.UI.Overlay.Widgets.Activities.World.Views.ArgosyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:loc="clr-namespace:HunterPie.UI.Architecture.Assets"
             xmlns:viewModels="clr-namespace:HunterPie.UI.Overlay.Widgets.Activities.World.ViewModels"
             xmlns:image="clr-namespace:HunterPie.UI.Controls.Image"
             xmlns:brushes="clr-namespace:HunterPie.UI.Architecture.Converters.Brushes"
             mc:Ignorable="d" 
             d:DesignHeight="40" 
             d:DesignWidth="135"
             d:DataContext="{d:DesignInstance viewModels:ArgosyViewModel}">
    <UserControl.Resources>
        <brushes:BrushToColorConverter x:Key="BrushToColorConverter"/>
    </UserControl.Resources>
    <Border BorderBrush="{StaticResource GRAY}"
            BorderThickness="1"
            CornerRadius="5"
            Background="{StaticResource GRAY_200}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <image:Icon Grid.Column="0"
                        Image="{StaticResource ICON_ARGOSY}"
                        Foreground="{StaticResource WHITE_200}"
                        Margin="3"
                        Width="{Binding ActualHeight, RelativeSource={RelativeSource Self}}"/>

            
            <Ellipse Grid.Column="1"
                     Width="7"
                     Height="{Binding Width, RelativeSource={RelativeSource Self}}"
                     VerticalAlignment="Top"
                     HorizontalAlignment="Right"
                     d:Fill="{StaticResource GREEN}"
                     Margin="3">
                <Ellipse.Effect>
                    <DropShadowEffect Color="{Binding Fill, RelativeSource={RelativeSource AncestorType={x:Type Ellipse}}, Converter={StaticResource BrushToColorConverter}}"
                                      ShadowDepth="0"
                                      BlurRadius="10"/>
                </Ellipse.Effect>
                <Ellipse.Style>
                    <Style TargetType="Ellipse">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsInTown, Mode=OneWay}" Value="True">
                                <Setter Property="Fill" Value="{StaticResource GREEN}"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsInTown, Mode=OneWay}" Value="False">
                                <Setter Property="Fill" Value="{StaticResource RED}"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Ellipse.Style>
            </Ellipse>

            <TextBlock Grid.Column="1"
                       d:Text="5"
                       Text="{Binding DaysLeft, Mode=OneWay}"
                       Foreground="{StaticResource WHITE_200}"
                       FontSize="16"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontWeight="Medium"
                       Margin="0,0,0,10"/>
            <TextBlock Grid.Column="1"
                       d:Text="days"
                       Text="{loc:LocalizationString '//Strings/Client/Overlay/String[@Id=&quot;ARGOSY_DAYS_STRING&quot;]'}"
                       Foreground="{StaticResource WHITE_500}"
                       FontSize="14"
                       VerticalAlignment="Bottom"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,5"/>
        </Grid>
    </Border>
</UserControl>
