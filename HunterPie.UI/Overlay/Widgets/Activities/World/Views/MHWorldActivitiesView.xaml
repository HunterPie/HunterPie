<UserControl x:Class="HunterPie.UI.Overlay.Widgets.Activities.World.Views.MHWorldActivitiesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HunterPie.UI.Overlay.Widgets.Activities.World.Views"
             xmlns:viewModels="clr-namespace:HunterPie.UI.Overlay.Widgets.Activities.World.ViewModels"
             mc:Ignorable="d"
             d:DesignWidth="265"
             d:DataContext="{d:DesignInstance viewModels:MHWorldActivitiesViewModel}">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="35"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Grid.Row="0"
                    Orientation="Horizontal">
            <local:HarvestBoxView Visibility="{Binding DataContext.IsHarvestBoxEnabled.Value, Mode=OneWay, RelativeSource={RelativeSource AncestorType={x:Type local:MHWorldActivitiesView}}, Converter={StaticResource BooleanToVisibilityConverter}}"
                                  DataContext="{Binding HarvestBox, Mode=OneTime}"/>
            <local:SteamworksView DataContext="{Binding Steamworks, Mode=OneTime}"
                                  Visibility="{Binding DataContext.IsSteamworksEnabled.Value, Mode=OneWay, RelativeSource={RelativeSource AncestorType={x:Type local:MHWorldActivitiesView}}, Converter={StaticResource BooleanToVisibilityConverter}}"
                                  Margin="-1,0,0,0"
                                  Height="140"
                                  Width="35"
                                  VerticalAlignment="Top"/>
        </StackPanel>
        

        <Grid Grid.Row="1"
              Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <local:ArgosyView Grid.Column="0" 
                              DataContext="{Binding Argosy, Mode=OneTime}"
                              Margin="2"
                              Visibility="{Binding DataContext.IsArgosyEnabled.Value, Mode=OneWay, RelativeSource={RelativeSource AncestorType={x:Type local:MHWorldActivitiesView}}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            <local:TailraidersView Grid.Column="1" 
                                   DataContext="{Binding Tailraiders, Mode=OneTime}"
                                   Visibility="{Binding DataContext.IsMeowmastersEnabled.Value, Mode=OneWay, RelativeSource={RelativeSource AncestorType={x:Type local:MHWorldActivitiesView}}, Converter={StaticResource BooleanToVisibilityConverter}}"
                                   Margin="2"/>
        </Grid>
    </Grid>
</UserControl>
