<arch:ClickableControl x:Class="HunterPie.UI.Controls.Buttons.Switch"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:anim="clr-namespace:HunterPie.UI.Architecture.Animation"
                       xmlns:arch="clr-namespace:HunterPie.UI.Architecture"
                       xmlns:converters="clr-namespace:HunterPie.UI.Architecture.Converters"
                       mc:Ignorable="d" 
                       Width="45"
                       Height="25"
                       Cursor="Hand">
    <arch:ClickableControl.Resources>
        <converters:RelativeSizeConverter x:Key="RelativeSizeConverter"/>
        <Style x:Key="StyleForeground"
               TargetType="{x:Type Rectangle}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsActive, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type arch:ClickableControl}}}"
                             Value="True">
                    <Setter Property="Margin" Value="25,0,0,0"/>
                    <Setter Property="Fill" Value="{DynamicResource Brushes.HunterPie.Foreground.Primary}"/>
                    <DataTrigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ThicknessAnimation To="25,0,0,0"
                                                    From="5,0,0,0"
                                                    Duration="0:0:0.15"
                                                 Storyboard.TargetProperty="Margin">
                                    <ThicknessAnimation.EasingFunction>
                                        <QuadraticEase/>
                                    </ThicknessAnimation.EasingFunction>
                                </ThicknessAnimation>
                                <anim:BrushAnimation To="{StaticResource Brushes.HunterPie.Foreground.Primary}"
                                                     From="{StaticResource Brushes.HunterPie.Foreground.Tertiary}"
                                                     Duration="0:0:0.15"
                                                     Storyboard.TargetProperty="Fill"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.EnterActions>
                    <DataTrigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ThicknessAnimation To="5,0,0,0"
                                                    From="25,0,0,0"
                                                    Duration="0:0:0.15"
                                                    Storyboard.TargetProperty="Margin">
                                    <ThicknessAnimation.EasingFunction>
                                        <QuadraticEase/>
                                    </ThicknessAnimation.EasingFunction>
                                </ThicknessAnimation>
                                <anim:BrushAnimation To="{StaticResource Brushes.HunterPie.Foreground.Tertiary}"
                                                     From="{StaticResource Brushes.HunterPie.Foreground.Primary}"
                                                     Duration="0:0:0.15"
                                                     Storyboard.TargetProperty="Fill"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.ExitActions>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsActive, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type arch:ClickableControl}}}"
                             Value="False">
                    <Setter Property="Margin" Value="5,0,0,0"/>
                    <Setter Property="Fill" Value="{DynamicResource Brushes.HunterPie.Foreground.Tertiary}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="SwitchBackground"
               TargetType="{x:Type Rectangle}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsActive, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type arch:ClickableControl}}}" 
                             Value="True">
                    <Setter Property="Fill" Value="{DynamicResource Brushes.HunterPie.Accent}"/>
                    <DataTrigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard FillBehavior="Stop">
                                <anim:BrushAnimation To="{StaticResource Brushes.HunterPie.Accent}"
                                                     From="{StaticResource Brushes.HunterPie.Background.Secondary}"
                                                     Duration="0:0:0.25"
                                                     Storyboard.TargetProperty="Fill"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.EnterActions>
                    <DataTrigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard FillBehavior="Stop">
                                <anim:BrushAnimation To="{StaticResource Brushes.HunterPie.Background.Secondary}"
                                                     From="{StaticResource Brushes.HunterPie.Accent}"
                                                     Duration="0:0:0.25"
                                                     Storyboard.TargetProperty="Fill"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.ExitActions>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsActive, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type arch:ClickableControl}}}"
                             Value="False">
                    <Setter Property="Fill" Value="{DynamicResource Brushes.HunterPie.Background.Secondary}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        
    </arch:ClickableControl.Resources>
    <Grid>
        <Rectangle RadiusX="{Binding ActualHeight, RelativeSource={RelativeSource Self}, Converter={StaticResource RelativeSizeConverter}, ConverterParameter=0.5}"
                   RadiusY="{Binding RadiusX, RelativeSource={RelativeSource Self}}"
                   Stroke="{DynamicResource Brushes.HunterPie.Border}"
                   Style="{StaticResource SwitchBackground}"
                   StrokeThickness="1"
                   Margin="2"/>
        
        <Rectangle x:Name="PART_Slider"
                   Height="{Binding ActualHeight, Converter={StaticResource RelativeSizeConverter}, ConverterParameter=.6, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Grid}}}"
                   Width="{Binding Path=ActualHeight, RelativeSource={RelativeSource Self}}"
                   VerticalAlignment="Stretch"
                   HorizontalAlignment="Left"
                   RadiusX="20"
                   RadiusY="20"
                   Style="{StaticResource StyleForeground}"/>

        
    </Grid>
</arch:ClickableControl>
