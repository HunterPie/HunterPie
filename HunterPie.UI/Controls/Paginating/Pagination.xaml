<UserControl x:Class="HunterPie.UI.Controls.Paginating.Pagination"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:buttons="clr-namespace:HunterPie.UI.Controls.Buttons"
             xmlns:image="clr-namespace:HunterPie.UI.Controls.Image"
             xmlns:viewModels="clr-namespace:HunterPie.UI.Controls.Paginating.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="40"
             x:Name="PaginationControl">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <Style x:Key="PaginationButtonStyle" TargetType="buttons:Button">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="{Binding ActualHeight, RelativeSource={RelativeSource Self}}"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Background" Value="{DynamicResource Brushes.HunterPie.Background.Primary}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Brushes.HunterPie.Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsEnabled, RelativeSource={RelativeSource Self}}"
                             Value="False">
                    <Setter Property="Opacity" Value="0.4"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <DataTemplate DataType="{x:Type viewModels:PaginationItemViewModel}"
                      x:Key="NormalPaginationItemTemplate">
            <buttons:Button Content="{Binding Page, Mode=OneWay}"
                            Visibility="{Binding IsVisible, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Width="{Binding ActualHeight, RelativeSource={RelativeSource Self}}"
                            Foreground="{DynamicResource Brushes.HunterPie.Foreground.Primary}"
                            BorderThickness="1"
                            CornerRadius="5"
                            Margin="1,0"
                            Click="OnPageButtonClick"
                            Cursor="Hand">
                <buttons:Button.Style>
                    <Style TargetType="buttons:Button">
                        <Setter Property="BorderBrush" Value="{DynamicResource Brushes.HunterPie.Accent}"/>
                        <Setter Property="Background" Value="{DynamicResource Brushes.HunterPie.Accent.Transparent}"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsActive, Mode=OneWay}"
                                         Value="False">
                                <Setter Property="BorderBrush" Value="{DynamicResource Brushes.HunterPie.Border}"/>
                                <Setter Property="Background" Value="{DynamicResource Brushes.HunterPie.Background.Primary}"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </buttons:Button.Style>
            </buttons:Button>
        </DataTemplate>

    </UserControl.Resources>
    <StackPanel Orientation="Horizontal">
        <buttons:Button Style="{StaticResource PaginationButtonStyle}"
                        Click="OnPreviousPageClick"
                        IsEnabled="{Binding CanPaginatePrevious, ElementName=PaginationControl}">
            <image:Icon Image="{DynamicResource ICON_CHEVRON_LEFT}"
                        Foreground="{DynamicResource Brushes.HunterPie.Foreground.Tertiary}"/>
        </buttons:Button>

        <ItemsControl ItemsSource="{Binding Pages, Mode=OneTime, ElementName=PaginationControl}"
                      ItemTemplate="{StaticResource NormalPaginationItemTemplate}"
                      Margin="2,0">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"
                                IsItemsHost="True"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>

        <buttons:Button Style="{StaticResource PaginationButtonStyle}"
                        Click="OnNextPageClick"
                        IsEnabled="{Binding CanPaginateNext, ElementName=PaginationControl}">
            <image:Icon Image="{DynamicResource ICON_CHEVRON_RIGHT}"
                        Foreground="{DynamicResource Brushes.HunterPie.Foreground.Tertiary}"/>
        </buttons:Button>
    </StackPanel>
</UserControl>
