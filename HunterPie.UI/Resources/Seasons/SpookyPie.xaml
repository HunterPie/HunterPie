<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Foregrounds -->
    <SolidColorBrush x:Key="Brushes.HunterPie.Foreground.Primary" Color="#F8F8F2" />  <!-- Pale ghost white -->
    <SolidColorBrush x:Key="Brushes.HunterPie.Foreground.Secondary" Color="#E6E6E6" /> <!-- Muted light gray -->
    <SolidColorBrush x:Key="Brushes.HunterPie.Foreground.Tertiary" Color="#B8B8B8" /> <!-- Dusty tombstone gray -->

    <!-- Backgrounds -->
    <SolidColorBrush x:Key="Brushes.HunterPie.Background.Primary" Color="#0B0B0F" />  <!-- Near-black night sky -->
    <SolidColorBrush x:Key="Brushes.HunterPie.Background.Secondary" Color="#141418" /> <!-- Deep crypt gray -->
    <SolidColorBrush x:Key="Brushes.HunterPie.Background.Tertiary" Color="#1E1E25" /> <!-- Shadowy purple-gray -->

    <!-- Border -->
    <SolidColorBrush x:Key="Brushes.HunterPie.Border" Color="#3A3A44" /> <!-- Faint moonlit stone -->

    <!-- Accent -->
    <SolidColorBrush x:Key="Brushes.HunterPie.Accent" Color="#FF7518" /> <!-- Jack-o’-lantern orange -->
</ResourceDictionary>