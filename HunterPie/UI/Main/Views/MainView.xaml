<Window x:Class="HunterPie.UI.Main.Views.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HunterPie.UI.Main.Views"
             xmlns:viewModels="clr-namespace:HunterPie.UI.Main.ViewModels"
             xmlns:views="clr-namespace:HunterPie.UI.Header.Views"
             xmlns:image="clr-namespace:HunterPie.UI.Controls.Image;assembly=HunterPie.UI"
             xmlns:buttons="clr-namespace:HunterPie.UI.Controls.Buttons;assembly=HunterPie.UI"
             xmlns:sb="clr-namespace:HunterPie.UI.SideBar.Views"
             xmlns:presentation="clr-namespace:HunterPie.UI.Main.Presentation"
             mc:Ignorable="d" 
             Icon="pack://application:,,,/Resources/Icon.ico"
             BorderBrush="{StaticResource HUNTERPIE_ACCENT_COLOR}"
             Background="{StaticResource GRAY_100}"
             Height="600" 
             Width="1000"
             MinWidth="600"
             MinHeight="400" 
             d:DesignHeight="600" 
             d:DesignWidth="1000"
             Title="HunterPie"
             SnapsToDevicePixels="True"
             UseLayoutRounding="True"
             WindowStyle="None"
             d:DataContext="{d:DesignInstance viewModels:MainViewModel}">
    <Window.Resources>
        <presentation:NavigationDataTemplateConverter x:Key="NavigationDataTemplateConverter"/>
    </Window.Resources>
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0"
                      CornerRadius="2"
                      GlassFrameThickness="-1"
                      ResizeBorderThickness="5"
                      UseAeroCaptionButtons="False"
                      NonClientFrameEdges="Right"/>
    </WindowChrome.WindowChrome>
    <Grid Margin="0,1,3,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!-- Content Navigation -->
        <ContentControl Grid.Column="1"
                        Grid.Row="1"
                        ContentTemplate="{Binding NavigationViewModel, Mode=OneWay,  Converter={StaticResource NavigationDataTemplateConverter}}"
                        Content="{Binding NavigationViewModel, Mode=OneWay, NotifyOnTargetUpdated=True}"
                        TargetUpdated="OnNavigationTargetUpdated"
                        RenderTransformOrigin="0.5,0.5"
                        x:Name="PART_NavigationHost">
            <ContentControl.RenderTransform>
                <ScaleTransform ScaleX="1"
                                ScaleY="1"/>
            </ContentControl.RenderTransform>
        </ContentControl>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" 
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Orientation="Vertical">
            <views:HeaderView DataContext="{Binding HeaderViewModel, Mode=OneWay}"
                              DragStart="OnDragStart"
                              CloseClick="OnCloseClick"
                              MinimizeClick="OnMinimizeClick"
                              Height="30"/>
            <Grid Height="120"
                  Background="{StaticResource GRAY_300}">
                <!-- Logo -->
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            Margin="20">
                    <image:Icon Image="{StaticResource ICON_HUNTERPIE}"
                                Height="50"
                                Width="{Binding ActualHeight, RelativeSource={RelativeSource Self}}"
                                Foreground="{StaticResource WHITE_100}"/>

                    <TextBlock VerticalAlignment="Center"
                               FontSize="25"
                               Foreground="{StaticResource WHITE_100}"
                               Margin="5">
                        <Run Text="Hunter"
                             FontWeight="Medium"/><!--
                        --><Run Text="Pie"/>
                    </TextBlock>
                </StackPanel>

                <!-- Launch Game -->
                <buttons:ComboButton VerticalAlignment="Center"
                                     HorizontalAlignment="Right"
                                     MinWidth="230"
                                     Height="45"
                                     Margin="20"/>
            </Grid>
        </StackPanel>

        <!-- SideBar -->
        <sb:SideBarView Grid.Column="0" 
                        Grid.Row="1"
                        Grid.ColumnSpan="2"
                        HorizontalAlignment="Left"
                        DataContext="{Binding SideBarViewModel, Mode=OneWay}"/>
    </Grid>
</Window>
