<UserControl x:Class="HunterPie.Features.Theme.Views.ThemeCardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HunterPie.Features.Theme.Views"
             xmlns:viewModels="clr-namespace:HunterPie.Features.Theme.ViewModels"
             xmlns:buttons="clr-namespace:HunterPie.UI.Controls.Buttons;assembly=HunterPie.UI"
             xmlns:image="clr-namespace:HunterPie.UI.Controls.Image;assembly=HunterPie.UI"
             mc:Ignorable="d" 
             d:DesignHeight="250" 
             d:DesignWidth="250"
             d:DataContext="{d:DesignInstance viewModels:ThemeCardViewModel}">
    <buttons:Button Background="{DynamicResource Brushes.HunterPie.Background.Secondary}"
                    BorderBrush="{DynamicResource Brushes.HunterPie.Border}"
                    CornerRadius="5"
                    BorderThickness="1"
                    HorizontalContentAlignment="Stretch"
                    VerticalContentAlignment="Stretch"
                    Padding="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="120"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="35"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0"
                        Grid.Column="0"
                        Background="{DynamicResource Brushes.HunterPie.Background.Tertiary}"
                        Margin="3"
                        CornerRadius="5"
                        Height="{Binding ActualWidth, RelativeSource={RelativeSource Self}}"
                        VerticalAlignment="Top">
                    <image:Icon Foreground="{DynamicResource Brushes.HunterPie.Foreground.Tertiary}"
                                Image="{DynamicResource Icons.Palette}"
                                Margin="5"/>
                </Border>

                <StackPanel Grid.Row="0"
                            Grid.Column="1"
                            Margin="5">
                    <TextBlock Text="Theme Name"
                               Foreground="{DynamicResource Brushes.HunterPie.Foreground.Primary}"
                               FontWeight="Medium"
                               FontSize="14"/>
                    <TextBlock Text="by Haato"
                               Foreground="{DynamicResource Brushes.HunterPie.Foreground.Tertiary}"
                               FontSize="10"/>
                </StackPanel>

                <buttons:Button Grid.Row="0"
                                Grid.Column="2"
                                VerticalAlignment="Top"
                                Background="{DynamicResource Brushes.HunterPie.Accent.Solid}"
                                Content="Download"
                                Padding="10,8"
                                CornerRadius="5"
                                FontSize="11"
                                Margin="5"/>

                <TextBlock Grid.Row="1"
                           Grid.Column="1"
                           Grid.ColumnSpan="2"
                           Text="This is a test description very long and descriptive of my theme, hell yeah"
                           TextWrapping="WrapWithOverflow"
                           Foreground="{DynamicResource Brushes.HunterPie.Foreground.Secondary}"
                           FontSize="11"/>
            </Grid>

            <Border Grid.Row="1"
                    Background="{DynamicResource Brushes.HunterPie.Background.Tertiary}"
                    Margin="5"
                    CornerRadius="5"/>
        </Grid>
    </buttons:Button>
</UserControl>
