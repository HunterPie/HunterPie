<UserControl x:Class="HunterPie.Features.Theme.Views.ThemeHomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HunterPie.Features.Theme.Views"
             xmlns:viewModels="clr-namespace:HunterPie.Features.Theme.ViewModels"
             xmlns:buttons="clr-namespace:HunterPie.UI.Controls.Buttons;assembly=HunterPie.UI"
             xmlns:presentation="clr-namespace:HunterPie.Features.Theme.Presentation"
             xmlns:converters="clr-namespace:HunterPie.UI.Architecture.Converters;assembly=HunterPie.UI"
             mc:Ignorable="d" 
             d:DesignHeight="450" 
             d:DesignWidth="800"
             d:DataContext="{d:DesignInstance viewModels:ThemeHomeViewModel}">
    <UserControl.Resources>
        <converters:IconResolver x:Key="IconResolver"/>
        <DataTemplate x:Key="Internal.HeaderTemplate"
                      DataType="{x:Type viewModels:ThemeHomeTabViewModel}">
            <buttons:TabItem Title="{Binding Title, Mode=OneWay}"
                             Icon="{Binding Icon, Mode=OneWay, Converter={StaticResource IconResolver}}"
                             ToolTip=""
                             Margin="2"/>
        </DataTemplate>

        <DataTemplate x:Key="Internal.ExploreTabTemplate"
                      DataType="{x:Type viewModels:ExploreThemeHomeTabViewModel}">
            <local:ExploreThemeHomeTabView />
        </DataTemplate>

        <DataTemplate x:Key="Internal.InstalledTabTemplate">
            <local:InstalledThemeHomeTabView />
        </DataTemplate>

        <presentation:ThemeTabTemplateSelector x:Key="ThemeTabTemplateSelector" 
                                               ExploreDataTemplate="{StaticResource Internal.ExploreTabTemplate}"
                                               InstalledDataTemplate="{StaticResource Internal.InstalledTabTemplate}"/>
    </UserControl.Resources>
    <Grid>
        <TabControl ItemsSource="{Binding Tabs, Mode=OneTime}"
                    d:ItemsSource="{d:SampleData ItemCount=2}"
                    SelectedIndex="0"
                    ItemTemplate="{StaticResource Internal.HeaderTemplate}"
                    ContentTemplateSelector="{StaticResource ThemeTabTemplateSelector}"
                    Background="{DynamicResource Brushes.HunterPie.Background.Tertiary}"
                    BorderThickness="0"/>
    </Grid>
</UserControl>
