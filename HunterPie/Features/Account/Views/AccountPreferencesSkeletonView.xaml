<UserControl x:Class="HunterPie.Features.Account.Views.AccountPreferencesSkeletonView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             d:Width="800"
             mc:Ignorable="d">
    <Border CornerRadius="5"
            Padding="10"
            Background="{DynamicResource Brushes.HunterPie.Background.Secondary}"
            BorderBrush="{DynamicResource Brushes.HunterPie.Border}"
            BorderThickness="1">
        <Grid Height="130">
            <Rectangle Fill="{DynamicResource Brushes.HunterPie.Foreground.Tertiary}"
                       Width="60"
                       Height="20"
                       RadiusX="5"
                       RadiusY="5"
                       Opacity="0.2"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"
                       Margin="0"/>
            <Rectangle Fill="{DynamicResource Brushes.HunterPie.Foreground.Tertiary}"
                       Width="100"
                       Height="20"
                       RadiusX="5"
                       RadiusY="5"
                       Opacity="0.2"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"
                       Margin="65,0,0,0"/>

            <Ellipse Height="80"
                     Width="80"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Left"
                     Opacity="0.2"
                     Fill="{DynamicResource Brushes.HunterPie.Foreground.Primary}"
                     Margin="10,25,0,0"/>

            <Rectangle Fill="{DynamicResource Brushes.HunterPie.Foreground.Secondary}"
                       Width="60"
                       Height="10"
                       RadiusX="2"
                       RadiusY="2"
                       Opacity="0.2"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"
                       Margin="110,38,0,0"/>
            <Rectangle Fill="{DynamicResource Brushes.HunterPie.Foreground.Primary}"
                       Width="80"
                       Height="12"
                       RadiusX="3"
                       RadiusY="3"
                       Opacity="0.2"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"
                       Margin="110,51,0,0"/>

            <Rectangle Fill="{DynamicResource Brushes.HunterPie.Foreground.Secondary}"
                       Width="35"
                       Height="10"
                       RadiusX="2"
                       RadiusY="2"
                       Opacity="0.2"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"
                       Margin="110,70,0,0"/>
            <Rectangle Fill="{DynamicResource Brushes.HunterPie.Foreground.Primary}"
                       Width="130"
                       Height="12"
                       RadiusX="3"
                       RadiusY="3"
                       Opacity="0.2"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"
                       Margin="110,83,0,0"/>
        </Grid>
    </Border>
</UserControl>
