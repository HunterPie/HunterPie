<UserControl x:Class="HunterPie.Features.Statistics.Views.QuestStatisticsSummarySkeletonView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:loading="clr-namespace:HunterPie.UI.Controls.Loading;assembly=HunterPie.UI"
             mc:Ignorable="d" 
             d:DesignHeight="130" 
             d:DesignWidth="800">
    <Border BorderBrush="{StaticResource Brushes.HunterPie.Border}"
            Background="{StaticResource Brushes.HunterPie.Background.Primary}"
            BorderThickness="1"
            CornerRadius="5"
            ClipToBounds="True">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="20"/>
            </Grid.ColumnDefinitions>
            
            <Border Grid.Row="0" 
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Background="{StaticResource Brushes.HunterPie.Background.Secondary}"
                    BorderThickness="0,0,1,1"
                    CornerRadius="5,0,0,0"
                    BorderBrush="{StaticResource Brushes.HunterPie.Border}"/>

            <loading:Skeleton Grid.Row="0"
                              Grid.Column="0"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Center"
                              Height="20"
                              Opacity="0.2"
                              Background="{StaticResource Brushes.HunterPie.Foreground.Tertiary}"
                              Margin="5"/>

            <loading:Skeleton Grid.Row="0"
                              Grid.Column="1"
                              Width="50"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Top"
                              Height="15"
                              Opacity="0.2"
                              Background="{StaticResource Brushes.HunterPie.Foreground.Secondary}"
                              Margin="5"/>

            <loading:Skeleton Grid.Row="0"
                              Grid.Column="1"
                              Width="180"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Top"
                              Height="15"
                              Opacity="0.2"
                              Background="{StaticResource Brushes.HunterPie.Foreground.Secondary}"
                              Margin="60,5,5,5"/>

            <loading:Skeleton Grid.Row="1"
                              Grid.Column="0"
                              Grid.ColumnSpan="2"
                              Width="100"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Top"
                              Height="15"
                              Opacity="0.2"
                              Background="{StaticResource Brushes.HunterPie.Foreground.Primary}"
                              Margin="5,5,5,5"/>

            <loading:Skeleton Grid.Row="1"
                              Grid.Column="0"
                              Grid.ColumnSpan="2"
                              Width="50"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Top"
                              Height="15"
                              Background="{StaticResource Brushes.HunterPie.Foreground.Primary}"
                              Opacity="0.2"
                              Margin="110,5,5,5"/>

            <loading:Skeleton Grid.Row="0" 
                              Grid.Column="1"
                              Width="120"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Bottom"
                              Height="10"
                              Opacity="0.2"
                              Background="{StaticResource Brushes.HunterPie.Foreground.Primary}"
                              Margin="5"/>

            <loading:Skeleton Grid.Row="1"
                              Grid.Column="0"
                              Grid.ColumnSpan="2"
                              Height="40"
                              Width="40"
                              Background="{StaticResource Brushes.HunterPie.Foreground.Primary}"
                              VerticalAlignment="Bottom"
                              HorizontalAlignment="Left"
                              Opacity="0.2"
                              Margin="5"/>
            <loading:Skeleton Grid.Row="1"
                              Grid.Column="0"
                              Grid.ColumnSpan="2"
                              Height="40"
                              Width="40"
                              Background="{StaticResource Brushes.HunterPie.Foreground.Primary}"
                              VerticalAlignment="Bottom"
                              HorizontalAlignment="Left"
                              Opacity="0.2"
                              Margin="50,5"/>
            <loading:Skeleton Grid.Row="1"
                              Grid.Column="0"
                              Grid.ColumnSpan="2"
                              Height="40"
                              Width="40"
                              Background="{StaticResource Brushes.HunterPie.Foreground.Primary}"
                              VerticalAlignment="Bottom"
                              HorizontalAlignment="Left"
                              Opacity="0.2"
                              Margin="95,5"/>
        </Grid>
    </Border>
</UserControl>
